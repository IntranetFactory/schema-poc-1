{
  "$schema": "https://semantius.com/meta/sem-schema/v1",
  "$id": "https://semantius.com/schemas/person.schema.json",
  "title": "Person",
  "description": "A person or user profile",
  "table": {
    "table_name": "persons",
    "singular": "person",
    "plural": "persons",
    "singular_label": "Person",
    "plural_label": "Persons",
    "icon_url": "/icons/person.svg",
    "description": "A person or user profile in the system"
  },
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "inputMode": "required",
      "title": "ID",
      "description": "Unique identifier"
    },
    "name": {
      "type": "string",
      "inputMode": "required",
      "title": "Name",
      "description": "Person's full name"
    },
    "email": {
      "type": "string",
      "format": "email",
      "inputMode": "required",
      "title": "Email",
      "description": "Email address"
    },
    "age": {
      "type": "integer",
      "minimum": 0,
      "maximum": 120,
      "title": "Age",
      "description": "Age in years"
    },
    "bio": {
      "format": "text",
      "title": "Bio",
      "description": "Biography or personal description"
    },
    "profileHtml": {
      "format": "html",
      "title": "Profile HTML",
      "description": "HTML formatted profile content"
    },
    "preferences": {
      "format": "json",
      "title": "Preferences",
      "description": "User preferences in JSON format"
    },
    "isActive": {
      "type": "boolean",
      "title": "Is Active",
      "description": "Whether the account is active"
    }
  },
  "required": ["id", "name", "email"],
  "additionalProperties": false
}
