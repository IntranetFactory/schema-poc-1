{
  "$schema": "https://example.com/meta/custom-vocabulary",
  "$id": "https://example.com/schemas/hello.schema.json",
  "$vocabulary": {
    "https://json-schema.org/draft/2020-12/vocab/core": true,
    "https://json-schema.org/draft/2020-12/vocab/validation": true,
    "https://example.com/vocab/custom-formats": true,
    "https://example.com/vocab/custom-validation": true
  },
  "title": "Hello",
  "description": "A minimal schema with just a required name field",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "title": "Name",
      "description": "Your name",
      "required": true
    }
  },
  "required": ["name"]
}
