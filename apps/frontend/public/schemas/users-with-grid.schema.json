{
  "$schema": "https://semantius.com/meta/sem-schema/v1",
  "$id": "https://semantius.com/schemas/users-with-grid.schema.json",
  "title": "Users with Grid Configuration",
  "description": "A user list with table and grid metadata for display configuration",
  "table": {
    "table_name": "users",
    "singular": "user",
    "plural": "users",
    "singular_label": "User",
    "plural_label": "Users",
    "icon_url": "/icons/user.svg",
    "description": "System users"
  },
  "grid": {
    "sortField": "lastName",
    "sortOrder": "asc"
  },
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "inputMode": "required",
      "title": "ID",
      "description": "Unique user identifier"
    },
    "firstName": {
      "type": "string",
      "inputMode": "required",
      "title": "First Name",
      "description": "User's first name"
    },
    "lastName": {
      "type": "string",
      "inputMode": "required",
      "title": "Last Name",
      "description": "User's last name"
    },
    "email": {
      "type": "string",
      "format": "email",
      "inputMode": "required",
      "title": "Email",
      "description": "Email address"
    },
    "role": {
      "type": "string",
      "enum": ["admin", "user", "guest"],
      "title": "Role",
      "description": "User role",
      "default": "user"
    },
    "isActive": {
      "type": "boolean",
      "title": "Active",
      "description": "Whether the account is active",
      "default": true
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "title": "Created At",
      "description": "Account creation date",
      "inputMode": "readonly"
    }
  },
  "required": ["id", "firstName", "lastName", "email"],
  "additionalProperties": false
}
