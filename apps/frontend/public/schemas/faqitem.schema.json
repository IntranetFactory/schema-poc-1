{
  "$schema": "https://semantius.com/meta/sem-schema/v1",
  "$id": "https://semantius.com/schemas/faqitem.schema.json",
  "title": "FAQItem",
  "description": "A frequently asked question item",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "inputMode": "readonly",
      "title": "Id",
      "description": "Unique FAQ identifier"
    },
    "question": {
      "type": "string",
      "inputMode": "required",
      "title": "Question",
      "description": "The question text"
    },
    "answer": {
      "format": "text",
      "inputMode": "required",
      "title": "Answer"
    },
    "category": {
      "format": "text",
      "title": "Category",
      "description": "FAQ category"
    },
    "views": {
      "type": "number",
      "precision": 0,
      "title": "Views",
      "description": "Number of views (integer)"
    }
  },
  "required": ["id", "question", "answer"]
}
