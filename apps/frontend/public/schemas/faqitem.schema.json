{
  "$schema": "https://semantius.com/meta/sem-schema/v1",
  "$id": "https://semantius.com/schemas/faqitem.schema.json",
  "title": "FAQItem",
  "description": "A frequently asked question item",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "inputMode": "required",
      "title": "ID",
      "description": "Unique FAQ identifier"
    },
    "question": {
      "type": "string",
      "inputMode": "required",
      "title": "Question",
      "description": "The question text"
    },
    "answer": {
      "format": "html",
      "inputMode": "required",
      "title": "Answer",
      "description": "HTML formatted answer"
    },
    "category": {
      "format": "text",
      "title": "Category",
      "description": "FAQ category"
    },
    "metadata": {
      "format": "json",
      "title": "Metadata",
      "description": "Additional metadata in JSON format"
    },
    "views": {
      "type": "number",
      "precision": 0,
      "title": "Views",
      "description": "Number of views (integer)"
    },
    "helpfulness": {
      "type": "number",
      "precision": 2,
      "title": "Helpfulness",
      "description": "Helpfulness score with up to 2 decimal places",
      "minimum": 0,
      "maximum": 1
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Tags",
      "description": "FAQ tags"
    }
  },
  "required": ["id", "question", "answer"]
}
