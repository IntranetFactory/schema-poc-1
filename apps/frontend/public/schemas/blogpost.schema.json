{
  "$schema": "https://semantius.com/meta/sem-schema/v1",
  "$id": "https://semantius.com/schemas/blogpost.schema.json",
  "title": "BlogPost",
  "description": "A blog post or article",
  "table": {
    "table_name": "blog_posts",
    "singular": "blog post",
    "plural": "blog posts",
    "singular_label": "Blog Post",
    "plural_label": "Blog Posts",
    "icon_url": "/icons/blog.svg",
    "description": "Blog posts and articles"
  },
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "inputMode": "required",
      "title": "ID",
      "description": "Unique post identifier"
    },
    "title": {
      "type": "string",
      "inputMode": "required",
      "minLength": 1,
      "title": "Title",
      "description": "Post title"
    },
    "slug": {
      "type": "string",
      "inputMode": "required",
      "pattern": "^[a-z0-9-]+$",
      "title": "Slug",
      "description": "URL-friendly slug"
    },
    "excerpt": {
      "format": "text",
      "title": "Excerpt",
      "description": "Short excerpt or summary"
    },
    "content": {
      "format": "html",
      "inputMode": "required",
      "title": "Content",
      "description": "HTML formatted post content"
    },
    "author": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "inputMode": "required",
          "title": "Name"
        },
        "email": {
          "type": "string",
          "format": "email",
          "title": "Email"
        }
      },
      "required": ["name"],
      "title": "Author",
      "description": "Post author information"
    },
    "publishedAt": {
      "type": "string",
      "format": "date-time",
      "title": "Published At",
      "description": "Publication date and time"
    },
    "metadata": {
      "format": "json",
      "title": "Metadata",
      "description": "Additional metadata in JSON format"
    },
    "viewCount": {
      "type": "number",
      "precision": 0,
      "title": "View Count",
      "description": "Number of views"
    },
    "rating": {
      "type": "number",
      "precision": 1,
      "minimum": 0,
      "maximum": 5,
      "title": "Rating",
      "description": "Average rating"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Tags",
      "description": "Post tags"
    },
    "published": {
      "type": "boolean",
      "title": "Published",
      "description": "Whether the post is published"
    }
  },
  "required": ["id", "title", "slug", "content", "author"]
}
