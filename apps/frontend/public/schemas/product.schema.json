{
  "$schema": "https://semantius.com/meta/sem-schema",
  "$id": "https://semantius.com/schemas/product.schema.json",
  "$vocabulary": {
    "https://json-schema.org/draft/2020-12/vocab/core": true,
    "https://json-schema.org/draft/2020-12/vocab/validation": true,
    "https://semantius.com/vocab/sem-schema/formats": true,
    "https://semantius.com/vocab/sem-schema/validation": true
  },
  "title": "Product",
  "description": "A product in the catalog",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "inputMode": "required",
      "title": "ID",
      "description": "Unique product identifier"
    },
    "name": {
      "type": "string",
      "inputMode": "required",
      "title": "Name",
      "description": "Product name"
    },
    "description": {
      "format": "text",
      "title": "Description",
      "description": "Multiline product description"
    },
    "detailedDescription": {
      "format": "html",
      "title": "Detailed Description",
      "description": "HTML formatted detailed description"
    },
    "metadata": {
      "format": "json",
      "title": "Metadata",
      "description": "Additional metadata in JSON format"
    },
    "price": {
      "type": "number",
      "precision": 2,
      "title": "Price",
      "description": "Product price with up to 2 decimal places"
    },
    "stock": {
      "type": "number",
      "precision": 0,
      "title": "Stock",
      "description": "Stock quantity (integer)"
    },
    "rating": {
      "type": "number",
      "precision": 1,
      "title": "Rating",
      "description": "Average rating with up to 1 decimal place",
      "minimum": 0,
      "maximum": 5
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "title": "Tags",
      "description": "Product tags"
    }
  },
  "required": ["id", "name"]
}
